    "version": "0.2.0",
    "configurations": [
        
    {
        "name": "Serve to the browser (ionic serve)",
        "type": "cordova",
        "request": "launch",
        "platform": "serve",
        "devServerAddress": "localhost",
        "sourceMaps": true,
        "ionicLiveReload": true,
        "cwd": "${workspaceFolder}"
    },
        
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}